@model IEnumerable<Jobby.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<div class="alert alert-info col-lg-12 bg-info">
    <p class="  pull-right" style="font-size:x-large"> All Available <b style="color:cornflowerblue">Users</b> </p>

    @using (Html.BeginForm("Users", "Users", FormMethod.Post))
    {
        <div class="input-group  ">
            <label class="input-group-addon" for="idusr">
                <span class="glyphicon glyphicon-search" aria-hidden="true">

                </span>


            </label>

            <input type="text" name="idusr" id="idusr" class="form-control center-block" placeholder="Find Users by Name// E-mail //type .." />
        </div>
    }
</div>
<br />





<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            //var z = 1;


            <div class="col-md-3 userframe" style="border:1px solid green;margin:9px;background-color:#7d0f0f ">
                <div>

                    <img class=" thumbnail img-circle userframeimg" src="~/img/@Html.DisplayFor(modelItem=>item.photo)" />

                </div>
                <hr style="background-color:goldenrod" />

                <div class="notvisible">

                    @Html.ActionLink(" ", "DeleteUser", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash pull-right ", @style = "color:rgb(234, 189, 130)" })
                    @Html.ActionLink(" ", "information", new { id = item.Id }, new { @class = "glyphicon glyphicon-eye-open ", @style = "color:rgb(234, 189, 130)" })
                    <br />
                </div>
            </div>


        }

    </div>
</div>

<h3> @Html.ActionLink("Add new Admin", "Register", "Account")</h3>



